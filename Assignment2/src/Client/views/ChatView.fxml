<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Client.views.ChatViewController">
    <Button mnemonicParsing="false" text="Log out">
        <VBox.margin>
            <Insets bottom="10.0" left="10.0" top="10.0" />
        </VBox.margin>
    </Button>
    <ListView fx:id="messageLogs" prefHeight="600.0" prefWidth="800.0" />
    <HBox>
        <children>
            <TextField fx:id="messageField" onAction="#onSendButtonPressed" prefHeight="26.0" prefWidth="700.0">
                <HBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </HBox.margin>
            </TextField>
            <Button fx:id="sendButton" onAction="#onSendButtonPressed" text="Send">
                <HBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </HBox.margin>
            </Button>
        </children>
    </HBox>
</VBox>
